<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvTitle"
        tools:text="Title"
        android:layout_marginLeft="@dimen/item_vertical_margin"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tvAuthor"
        tools:text="Author"
        android:layout_below="@+id/tvTitle"
        android:layout_marginLeft="@dimen/item_vertical_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvIsbn0"
        tools:text="ISBN-10 here. If only ISBN-13 present, then ISBN-13 here."
        android:layout_below="@+id/tvAuthor"
        android:layout_marginLeft="@dimen/item_vertical_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvIsbn1"
        tools:text="ISBN-13 here if both ISBN present."
        android:layout_below="@+id/tvIsbn0"
        android:layout_marginLeft="@dimen/item_vertical_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>